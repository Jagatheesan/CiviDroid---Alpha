<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/civi_green"
        android:id="@+id/selectionTitle"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFieldSelectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/field_selection"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFields"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="20dp"
        android:layout_below="@id/selectionTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="sans-serif-light"
        android:text="@string/loading_fields"
        android:layout_below="@id/selectionTitle"
        android:id="@+id/tvLoadingFields"
        android:layout_height="match_parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_navigate_next_white_24dp"
        android:layout_alignBottom="@id/selectionTitle"
        android:backgroundTint="@color/civi_blue"
        android:layout_marginBottom="-20dp"
        app:borderWidth="0dp"
        android:elevation="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp" />

</RelativeLayout>